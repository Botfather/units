{
  "name": "units",
  "displayName": "Units",
  "description": "Syntax highlighting and snippets for the Units DSL (.ui).",
  "version": "0.1.0",
  "publisher": "units",
  "main": "./extension.js",
  "activationEvents": ["onLanguage:units"],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages"],
  "contributes": {
    "configuration": {
      "title": "Units",
      "properties": {
        "units.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format .ui files on save."
        }
      }
    },
    "languages": [
      {
        "id": "units",
        "aliases": ["Units", "units"],
        "extensions": [".ui"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "units",
        "scopeName": "source.units",
        "path": "./syntaxes/units.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "units",
        "path": "./snippets/units.json"
      }
    ]
  }
}
